{
  "name": "text-matcher",
  "version": "0.1.0",
  "author": "Kyedo <hey@kyedo.dev> (https://github.com/itskyedo)",
  "description": "A simple text matching library",
  "license": "MIT",
  "homepage": "https://github.com/itskyedo/text-matcher#readme",
  "bugs": {
    "url": "https://github.com/itskyedo/text-matcher/issues"
  },
  "keywords": [
    "text",
    "string",
    "matcher",
    "regex",
    "javascript",
    "typescript"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/itskyedo/text-matcher.git"
  },
  "scripts": {
    "prepare": "lefthook install",
    "build": "tsup",
    "dev": "tsup --watch",
    "formatcheck": "prettier --check .",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "lint": "eslint",
    "lintfix": "eslint --fix",
    "check": "npm run formatcheck && npm run typecheck && npm run lint",
    "fix": "npm run format && npm run lintfix",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "clean": "rimraf dist"
  },
  "type": "module",
  "sideEffects": false,
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist/**",
    "README.md",
    "LICENSE"
  ],
  "devDependencies": {
    "@commitlint/cli": "^19.7.1",
    "@commitlint/config-conventional": "^19.7.1",
    "@itskyedo/eslint-config": "^0.2.0",
    "@vitest/coverage-v8": "^3.0.5",
    "eslint": "^9.19.0",
    "lefthook": "^1.10.10",
    "lint-staged": "^15.4.3",
    "prettier": "^3.4.2",
    "prettier-plugin-jsdoc": "^1.3.2",
    "rimraf": "^6.0.1",
    "tsup": "^8.3.6",
    "typescript": "5.7.3",
    "vitest": "^3.0.5"
  }
}
